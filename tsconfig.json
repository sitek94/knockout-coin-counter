{
  "compilerOptions": {

    /* Basic Options */
    "target": "ES2015",
    "module": "ES6",
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,
    
    /* Module Resolution Options */
    "baseUrl": "./src",
    "moduleResolution": "node",
  }
}
